{
	"name": "polkadot-js-api-ts-template",
	"version": "0.1.0",
	"description": "A template project to kickstart hacking on top of @polkadot/api, using typescript",
	"main": "./build/index.js",
	"scripts": {
		"main": "./node_modules/.bin/ts-node ./src/index.ts",
		"test:corrupt_ledgers": "./node_modules/.bin/ts-node src/corrupt_ledgers.ts",
		"test:double_bonded": "./node_modules/.bin/ts-node src/double_bonded.ts",
		"test:unclaimed_reward_pages": "./node_modules/.bin/ts-node src/unclaimed_reward_pages.ts",
		"test:binary_search": "./node_modules/.bin/ts-node src/binary_search.ts",
		"test:lock": "./node_modules/.bin/ts-node src/locked_lower_than_stake.ts",
		"main:dev": "./node_modules/.bin/nodemon --exec ./node_modules/.bin/ts-node ./src/index.ts",
		"bounded:rewards-page-dist": "./node_modules/.bin/nodemon --exec ./node_modules/.bin/ts-node ./src/rewards-page-dist.ts",
		"bounded:slashing-spans": "./node_modules/.bin/nodemon --exec ./node_modules/.bin/ts-node ./src/slashing-spans.ts",
		"test:overstake": "./node_modules/.bin/nodemon --exec ./node_modules/.bin/ts-node ./src/overstake.ts",
		"build": "npm run clean && ./node_modules/.bin/tsc --pretty --declaration",
		"build:dev": "./node_modules/.bin/tsc --pretty --declaration --watch",
		"clean": "./node_modules/.bin/rimraf build",
		"update": "./node_modules/.bin/ncu -u && yarn",
		"lint": "eslint . --ext .ts --fix",
		"format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
	},
	"author": "@ank4n",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.20.7",
		"@babel/core": "^7.20.12",
		"@babel/preset-typescript": "^7.18.6",
		"@types/node": "^18.11.18",
		"@types/yargs": "^17.0.22",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"npm-check-updates": "16.6.3",
		"prettier": "^2.8.3",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "4.9.5",
		"nodemon": "^2.0.20",
		"rimraf": "^4.1.2"
	},
	"dependencies": {
		"@polkadot/api": "12.3.1",
		"yargs": "^17.6.2"
	}
}
